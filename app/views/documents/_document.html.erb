<div id="<%= dom_id document %>">
  <p>
    <strong>Title:</strong>
    <%= document.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= document.content %>
  </p>

  <p>
    <strong>File:</strong>
    <%= link_to document.file.filename, document.file if document.file.attached? %>
  </p>

  <p>
    <strong>Topic:</strong>
    <%= document.topic %>
  </p>

</div>
